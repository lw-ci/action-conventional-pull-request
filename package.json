{
  "name": "typescript-action",
  "description": "GitHub Actions TypeScript template",
  "version": "0.0.0",
  "author": "",
  "private": true,
  "homepage": "https://github.com/actions/typescript-action",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/actions/typescript-action.git"
  },
  "bugs": {
    "url": "https://github.com/actions/typescript-action/issues"
  },
  "keywords": ["actions", "node", "setup"],
  "exports": {
    ".": "./dist/index.js"
  },
  "engines": {
    "node": ">=20"
  },
  "scripts": {
    "bundle": "pnpm run format:write && pnpm run package",
    "ci-test": "jest",
    "coverage": "pnpx make-coverage-badge --output-path ./badges/coverage.svg",
    "format:write": "pnpm biome format --write .",
    "format:check": "pnpm biome format .",
    "lint": "pnpm biome lint .",
    "check": "pnpm biome check .",
    "check:write": "pnpm biome check --write .",
    "package": "ncc build src/index.mts -o dist --source-map --license licenses.txt",
    "package:watch": "npm run package -- --watch",
    "test": "jest",
    "all": "pnpm run format:write && pnpm run lint && pnpm run test && pnpm run coverage && pnpm run package",
    "start": "node dist/index.js"
  },
  "license": "MIT",
  "jest": {
    "preset": "ts-jest",
    "verbose": true,
    "clearMocks": true,
    "testEnvironment": "node",
    "moduleFileExtensions": ["js", "ts"],
    "testMatch": ["**/*.test.ts"],
    "testPathIgnorePatterns": ["/node_modules/", "/dist/"],
    "transform": {
      "^.+\\.ts$": "ts-jest"
    },
    "coverageReporters": ["json-summary", "text", "lcov"],
    "collectCoverage": true,
    "collectCoverageFrom": ["./src/**"]
  },
  "dependencies": {
    "@actions/core": "^1.10.1",
    "@actions/github": "^6.0.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@commitlint/format": "^19.3.0",
    "@commitlint/lint": "^19.2.2",
    "@commitlint/load": "^19.4.0",
    "@commitlint/types": "^19.0.3",
    "conventional-changelog-conventionalcommits": "^8.0.0",
    "tsx": "^4.19.0"
  },
  "devDependencies": {
    "@biomejs/biome": "1.8.3",
    "@jest/globals": "^29.7.0",
    "@types/jest": "^29.5.12",
    "@types/node": "^22.5.0",
    "@vercel/ncc": "^0.38.1",
    "jest": "^29.7.0",
    "make-coverage-badge": "^1.2.0",
    "ts-jest": "^29.2.5",
    "typescript": "^5.5.4"
  }
}
